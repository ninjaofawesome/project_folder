<div class="container">

<div class="row">
	<center>
	    <div class="col-xs-12 col-s-12 col-md-12">  
			<h1 class = "extra_large">Here's the information about your song</h1>
		</div>
	</center>

	<div class="clearfix visible-xs"></div>
	<div class="clearfix visible-s"></div>

</div><!-- this is the end of the row  -->

<div class="row">
	<div class="col-xs-6 col-s-6 col-md-6">
		<h3 class ="gray">Artists and their Songs in this playlist: </h3>
		<% @output.each do |key,value| %>
			<ul>
				<li class = "text"><b class= "big"><%= "#{key[:artist]}:" %></b> 
									<%= "#{key[:title]}" %></li>	
			</ul>
		<% end %>

	<div class="clearfix visible-xs"></div>
	<div class="clearfix visible-s"></div>
		
	</div>
	<div class="col-xs-6 col-s-6 col-md-6">
		<h3 class ="gray">Songs and their Genres in this playlist: </h3>
		<% @output.each do |key,value| %>
			<ul>
				<li class = "text"><b class= "big"><%= "#{key[:title]}" %></b>
										<%= ", filed under #{key[:genre]}" %></li>	
			</ul>
		<% end %>
	</div>


	<div class="clearfix visible-xs"></div>
	<div class="clearfix visible-s"></div>

</div><!-- this is the end of the row  -->

</div> <!-- this is the end of the container  -->


